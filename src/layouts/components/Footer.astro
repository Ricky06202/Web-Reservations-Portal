---
import Logo from '/public/favicon.svg'
import RolesComponente from './roles'
import { AstroIcon } from './icons/AstroIcon'

const props = Astro.props

interface Role {
	nombre: string
	rol: string
	icon: JSX.Element
	color: string
}

const Roles = [
	{
		nombre: 'Jeison',
		rol: 'Base de datos',
		icon: 'Base de datos',
		color: 'red',
	},
	{
		nombre: 'Jean',
		rol: 'Notificaciones',
		icon: 'Notificaciones',
		color: 'green',
	},
	{
		nombre: 'Jahir',
		rol: 'Autentificación',
		icon: 'Autenticacion',
		color: '#FF6C00',
	},
	{
		nombre: 'Edwar',
		rol: 'WebSocket',
		icon: 'WebSocket',
		color: '#191970',
	},
	{
		nombre: 'Dilan',
		rol: 'Historial de eventos',
		icon: 'Historial',
		color: 'purple',
	},
	{
		nombre: 'Azner y Ricardo',
		rol: 'Aplicación Web',
		icon: 'Astro',
		color: '#808000',
	},
	{
		nombre: 'Pedro',
		rol: 'Docker',
		icon: 'Docker',
		color: 'blue',
	},
]
---

<footer class='bg-gray-100 mt-8'>
	<div class='mx-auto w-full max-w-screen-xl p-6 lg:p-8'>
		<div class='grid grid-cols-1 gap-8 lg:grid-cols-3'>
			<div class='lg:col-span-1'>
				<a
					href='/'
					class='flex items-center space-x-3'
				>
					<AstroIcon className='w-10 h-10 text-primary' />
					<span class='self-center text-2xl font-semibold text-gray-900'>Portal de Reservas</span>
				</a>
				<p class='mt-4 text-sm text-gray-600'>Sistema de Reservas para Eventos en Tiempo Real</p>
				<p class='mt-2 text-sm text-gray-500'>Desarrollado para el 16 de octubre del 2024</p>
			</div>

			<div class='grid grid-cols-2 gap-8 lg:col-span-2'>
				<div>
					<h2 class='mb-6 text-sm font-semibold text-gray-900 uppercase'>Repositorios</h2>
					<ul class='space-y-4'>
						<li>
							<a
								href='https://github.com/Ricky06202/Web-Reservations-Portal'
								class='text-gray-600 hover:text-blue-500 transition-colors'
							>
								FrontEnd
							</a>
						</li>
						<li>
							<a
								href='https://github.com/Jeison0770/RetoGrupo2'
								class='text-gray-600 hover:text-blue-500 transition-colors'
							>
								Backend
							</a>
						</li>
					</ul>
				</div>
				<div>
					<h2 class='mb-6 text-sm font-semibold text-gray-900 uppercase'>Legal</h2>
					<ul class='space-y-4'>
						<li>
							<a
								href='#'
								class='text-gray-600 hover:text-blue-500 transition-colors'
							>
								Política de privacidad
							</a>
						</li>
						<li>
							<a
								href='#'
								class='text-gray-600 hover:text-blue-500 transition-colors'
							>
								Terminos &amp; Condiciones
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<hr class='my-8 border-gray-200' />

		<div class='mt-8 space-y-4'>
			<h2 class='text-xl font-semibold text-gray-900 text-center'>Nuestro Equipo</h2>
			<div class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4'>
				{
					Roles.map((rol, index) => (
						<RolesComponente
							key={index}
							nombre={rol.nombre}
							rol={rol.rol}
							icon={rol.icon}
							color={rol.color}
						/>
					))
				}
			</div>
		</div>
	</div>
</footer>
